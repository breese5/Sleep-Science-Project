# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_BEDROCK_REGION=us-east-1

# Application Configuration
APP_NAME=SleepScienceBot
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sleep_science_bot
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# NIH PubMed API Configuration
NIH_API_KEY=your_nih_api_key
NIH_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils

# CDC API Configuration
CDC_BASE_URL=https://data.cdc.gov/resource

# Security Configuration
SECRET_KEY=your_secret_key_here_make_it_long_and_random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Bedrock Model Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=True
METRICS_PORT=9090

# S3 Configuration
S3_BUCKET_NAME=sleep-science-bot-data
S3_REGION=us-east-1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600 